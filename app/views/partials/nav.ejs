<header>
	<div class="container">
		<nav class="navbar navbar-expand-lg">
			<div class="container-fluid px-0">
				<%# logo %>
				<a class="navbar-brand mintest" href="/">
					<i class="bi bi-bullseye pe-1"></i>Pricetrack
				</a>

				<%# toggle mobile btn %>
				<button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
					<i class="bi bi-list"></i>
				</button>

				<%# nav menu %>
				<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
					<div class="offcanvas-header">
						<h5 class="offcanvas-title" id="offcanvasNavbarLabel">
							<i class="bi bi-bullseye pe-1"></i>Pricetrack
						</h5>
						<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
					</div>

					<div class="offcanvas-body">
						<ul class="navbar-nav justify-content-end align-items-center flex-grow-1">
							<% if (!isLoggedIn) { %>
								<li class="nav-item box-border">
									<a class="nav-link" href="/auth/login">Sign in</a>
								</li>
								<li class="nav-item box-fill">
									<a class="nav-link" href="/auth/signup">Sign up</a>
								</li>
							<% } else { %>
								<li class="nav-item">
									<a class="nav-link" href="/item/add" title="Add an item to database">
										<i class="bi bi-plus-circle"></i>
										<span class="d-lg-none d-xl-none">Add item</span>
									</a>
								</li>
								<li class="nav-item d-lg-none d-xl-none">
									<a class="nav-link" href="/account">Account</a>
								</li>
								<li class="nav-item d-lg-none d-xl-none box-border">
									<form action="/auth/logout" method="post">
										<button class="btn nav-item" style="width: 100%;" type="submit">Logout</button>
									</form>
								</li>
								<li class="nav-item dropdown">
									<a class="nav-link pe-0 d-none d-lg-block d-xl-block" href="/account" >
										<i class="bi bi-person-square"></i>
									</a>
									<ul class="dropdown-menu dropdown-menu-end">
										<li>
											<a class="dropdown-item" href="/account">Account</a>
										</li>
										<li>
											<form action="/auth/logout" method="post">
												<button class="dropdown-item" style="width: 100%;" type="submit">Logout</button>
											</form>
										</li>
									</ul>
								</li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</div>
</header>
