<%- include("../partials/start") %>
</head>

<body>
	<div class="container d-flex align-items-center flex-column mt-5">
		<div class="d-flex justify-content-center align-items-center flex-column pt-4 pb-3">
			<a class="navbar-brand" href="/">
				<h4><i class="bi bi-bullseye pe-1"></i>Pricetrack</h4>
			</a>
			<p>Sign in to Pricetrack</p>
		</div>
		<%- include("../partials/flash_msg", { messages }) %>
		<form class="container" style="max-width: 410px;" action="" method="post">
			<div class="mb-3">
				<label for="userEmail" class="form-label">Email address</label>
				<input name="email" type="email" class="form-control rounded-0" id="userEmail" aria-describedby="emailHelp" required>
			</div>
			<div class="position-relative mb-3">
				<label for="userEmail" class="form-label">Password</label>
				<input name="password" type="password" class="form-control rounded-0" id="userEmail" required>
				<a id="forgot-password" class="position-absolute top-0 end-0" href="/auth/password_reset">Forgot password?</a>
			</div>
			<button type="submit" class="btn btn-primary rounded-0" style="width: 100%;">Sign in</button>
		</form>
		<div class="card rounded-0" style="width: 100%; max-width: 380px; margin-top: 18px; margin-bottom: 48px;">
			<div class="card-body">
				New to PriceScanner? <a href="/auth/signup">Create an account</a>
			</div>
		</div>
	</div>

<%- include("../partials/end") %>
